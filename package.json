{
  "name": "nlapack",
  "version": "2.0.5",
  "description": "C++ bindings for all single- and double-precision CLAPACK (Linear Algebra Package) routines.",
  "main": "built/index.js",
  "types": "built/index.d.ts",
  "scripts": {
    "test": "nyc mocha -r ts-node/register ./src/*.spec.ts",
    "docs": "typedoc --out docs --exclude \"**/*+(.spec).ts\" --target es6 src && touch docs/.nojekyll",
    "build": "node-gyp rebuild -j max",
    "prepublishOnly": "tsc",
    "install": "npm run build"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "exclude": [
      "**/*.d.ts",
      "built/**",
      "docs/**",
      "coverage/**",
      "lib/**",
      "routines/**",
      "src/*.spec.ts",
      "src/index.cc"
    ],
    "reporter": [
      "lcov"
    ],
    "all": true
  },
  "repository": {
    "git": "https://github.com/mateogianolio/nblas"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.11.1",
    "mocha": "^7.1.1",
    "nyc": "^15.0.1",
    "ts-node": "^8.8.2",
    "typedoc": "^0.17.4",
    "typescript": "^3.8.3"
  },
  "author": "Mateo Gianolio",
  "license": "MIT",
  "gypfile": true
}
