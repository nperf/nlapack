{
  "name": "nlapack",
  "version": "1.0.1",
  "description": "C++ bindings for all single- and double-precision CLAPACK (Linear Algebra Package) routines.",
  "main": "built/index.js",
  "scripts": {
    "test": "nyc mocha -r ts-node/register ./src/*.spec.ts",
    "lint": "tslint -p . -c tslint.json 'src/*.ts'",
    "docs": "typedoc --out docs --exclude \"**/*+(.spec).ts\" --target es6 src && touch docs/.nojekyll",
    "build": "node-gyp rebuild && tsc",
    "install": "npm run build"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "exclude": [
      "**/*.d.ts",
      "built/**",
      "docs/**",
      "coverage/**",
      "lib/**",
      "routines/**",
      "src/*.spec.ts",
      "src/index.cc"
    ],
    "reporter": [
      "lcov"
    ],
    "all": true
  },
  "repository": {
    "git": "https://github.com/mateogianolio/nblas"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/mocha": "^5.2.6",
    "@types/node": "^10.12.0",
    "mocha": "^6.1.0",
    "nyc": "^13.3.0",
    "ts-node": "^8.0.3",
    "tslint": "^5.14.0",
    "typedoc": "^0.14.2",
    "typescript": "^3.1.3"
  },
  "author": "Mateo Gianolio",
  "license": "MIT",
  "gypfile": true
}
